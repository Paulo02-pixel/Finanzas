<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.MainActivityProfile">

    <TextView
        android:id="@+id/textViewProfileTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Perfil del Usuario"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/editTextNameProfile"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="Nombre"
        app:layout_constraintTop_toBottomOf="@id/textViewProfileTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="30dp" />
    <Button
        android:id="@+id/buttonUpdateProfile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Actualizar Nombre"
        app:layout_constraintTop_toBottomOf="@id/editTextNameProfile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="30dp" />
    <TextView
        android:id="@+id/editTextEmailProfile"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="Correo Electr칩nico"
        android:inputType="textEmailAddress"
        app:layout_constraintTop_toBottomOf="@id/buttonUpdateProfile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="30dp" />

    <EditText
        android:id="@+id/editTextPasswordProfile"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="Nueva Contrase침a"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@id/editTextEmailProfile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="30dp" />

    <Button
        android:id="@+id/buttonUpdatePassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Actualizar Contrase침a"
        app:layout_constraintTop_toBottomOf="@id/editTextPasswordProfile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="30dp" />

    <ImageButton
        android:id="@+id/buttonMain"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/home"
        android:contentDescription="Volver a Inicio"
        app:layout_constraintTop_toBottomOf="@id/buttonUpdatePassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="30dp"
        android:scaleType="centerInside"
        android:background="@android:color/transparent"
        app:tint="@color/green_700"/>

    <Button
        android:id="@+id/buttonSignOut"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Cerrar Sesi칩n"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintTop_toBottomOf="@id/buttonMain"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/green_700"/>
</androidx.constraintlayout.widget.ConstraintLayout>